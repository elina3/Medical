/**index.wxss**/
view{
  color: #333;  
}
.logo{
  height: 320rpx;
  width: 100%;
  overflow: hidden;
  background: url('http://7xs3gd.com1.z0.glb.clouddn.com/900-500%E5%8C%BB%E9%99%A2%E5%85%A8%E6%99%AF.png')  -20rpx top no-repeat;
  background-size: cover;
}

.logo image{
  width: 100%;
}
.modules{
  width: 100%;
  margin-top: 10rpx;
}
.modules .module-row{
  width: 100%;
  height: 120rpx;
  display: flex;
  border-top: 1px solid #cdcdcd;
}
.module-row .module-item{
  width: 50%;
  height: 120rpx;
  
}
.module-row .module-item:nth-child(1){
  border-right: 1px solid #cdcdcd;
}
.module-row .module-item image{
  display: inline-block;
  float: left;
  width: 80rpx;
  height:80rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 40rpx;
}
.module-row .module-item navigator{
  display: inline-block;
  float: left;
  padding-left: 20rpx;
}
.module-row .module-item navigator text{
  display: block;
  font-size: 34rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.module-row .module-item navigator span{
  display: block;
  font-size: 24rpx;
  color: #999;
}

.comments{
  border-top: 1px solid #cdcdcd;
  padding: 0 20rpx;
}

.comments .comment{
  overflow: hidden;
  border-bottom: 1px solid #cdcdcd;
  padding: 10rpx 0;
}
.comments .comments-title{
  display: block;
  height: 120rpx;
  line-height: 120rpx;
}
.comments .comments-title image{
  display: inline-block;
  float: left;
  width: 50rpx;
  height: 50rpx;
  border-radius: 40rpx;
  margin-top: 35rpx;
}
.comments .comments-title text{
  display: inline-block;
  float: left;
  padding-left: 20rpx;
  font-size: 34rpx;
}
.comments .comments-title navigator{
  display: inline-block;
  float: right;
  font-size: 26rpx;
  color: #999;
}
.comments .comment .user-info{
  display: block;
  height: 70rpx;
  line-height: 70rpx;
}
.comments .comment .user-info text{
  display: inline-block;
  float: left;
  font-size: 28rpx;
}
.comments .comment .user-info .stars{
  display: inline-block;
  float: right;
}
.comments .comment .user-info .stars icon{
  display: inline-block;
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
  background: url('http://7xs3gd.com1.z0.glb.clouddn.com/start.png') bottom left no-repeat;
  background-size: contain;
}

.comments .comment .comment-content{
  display: block;
  font-size: 28rpx;
  line-height: 50rpx;
  height: 100rpx;
}

.comments .comment .info{
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999;
}
.comments .comment .info span{
  display: inline-block;
  float: left;
} 
.comments .comment .info time{
  display: inline-block;
  float: right;
}